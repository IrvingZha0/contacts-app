{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug via Nodemon",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/nodemon",
            "runtimeArgs": [
                "--debug=9229", "--inspect"
            ],
            "port": 9229,
            "protocol": "inspector",
            "program": "${workspaceRoot}/index.js",
            "console": "integratedTerminal",
            "restart": true
        }
    ]
}